{% set headline = 'Analyse' %}
{% set beaver = 'research' %}
{% include 'macros/beaver_picture.html.j2' %}
{% for section in ["problem", "vision"] %}
<section id="{{ section }}_statement" {{ background('analyses/' ~ section) }}>
  <section>
    <h2>{{ section | title }} Statement</h2>
    <blockquote class="fs-2 fragment fade-in">
      {{ extract_slide("/source/docs/overview/" ~ (section | title) ~ "_Statement.md", "Short").content }}
      <footer>
        <a target="_blank" href="{{ docs_link("/source/docs/overview/" ~ (section | title) ~ "_Statement.md") }}">- CyMaIS {{section | title}} Statement</a>
      </footer>
    </blockquote>
  </section>
  <section>
    <h2>{{ section | title }} Statement Short</h2>
    <div class="rounded p-4 my-4 bg-dark text-white shadow-sm bg-opacity-75 fs-2">
    {{ extract_slide("/source/docs/overview/" ~ (section | title) ~ "_Statement.md", "Key Points").content }}
      <img src="static/img/slides/pictures/beaver/{{section}}.png" width="150" />
    </div>
  </section>
</section>
{% endfor %}
<section id="market">
  {% set headline = 'Market Analyses' %}
  {% set beaver = 'market_optimistic' %}
  {% include 'macros/beaver_picture.html.j2' %}
  {% for market in markets %}
    <!-- One section per market -->
    <section id="market-{{ market.id }}">
      <!-- Fragment 1: Market title, beaver image, and a link to the analysis markdown -->
      <div class="fragment" data-fragment-index="1">
        <h3>
          <a href="{{ market.analysis_link }}" target="_blank">{{ market.title }}</a>
        </h3>
        <img src="/static/img/slides/pictures/beaver/{{ market.beaver }}" alt="{{ market.title }}" class="beaver-center">
      </div>
      
      <!-- Fragment 2: Introduction section -->
      <div class="fragment" data-fragment-index="2">
        <h4>Introduction</h4>
        <div>
          {{ market.introduction | safe }}
        </div>
      </div>
      
      <!-- Fragment 3: Diagram 1 -->
      <div class="fragment" data-fragment-index="3">
        <h4>Diagram 1</h4>
        <pre>{{ market.diagram1 }}</pre>
      </div>
      
      <!-- Fragment 4: Diagram 2 -->
      <div class="fragment" data-fragment-index="4">
        <h4>Diagram 2</h4>
        <pre>{{ market.diagram2 }}</pre>
      </div>
      
      <!-- Fragment 5: Diagram 3 -->
      <div class="fragment" data-fragment-index="5">
        <h4>Diagram 3</h4>
        <pre>{{ market.diagram3 }}</pre>
      </div>
    </section>
  {% endfor %}
</section>
