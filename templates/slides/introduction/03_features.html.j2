<section id="features">
    <h2>Features</h2>
    <ul>
    {% for entry in headlines('slides/introduction/features') %}
        <li>
            {% if entry.id %}
                <a href="#{{ entry.id }}">{{ entry.headline }}</a>
            {% else %}
                {{ entry.headline }}
            {% endif %}
        </li>
    {% endfor %}
    </ul>
</section>
{% for file in snippets('slides/introduction/features') %}
    {% include file %}
{% endfor %}