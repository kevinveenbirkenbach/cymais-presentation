{# 
    Render a section with:
    - headline
    - auto-generated list of headlines in the given path
    - includes all files from path

    Required:
        headline: The section headline
        path:     Subdirectory for snippets

    Optional:
        background: Reveal.js background attribute string
#}

<section
    {% if background %}
        {{ background }}
    {% endif %}
>
    <h2>{{ headline }}</h2>

    <ul>
    {% for entry in headlines(path) %}
        <li>
            {% if entry.id %}
                <a href="#{{ entry.id }}">{{ entry.headline }}</a>
            {% else %}
                {{ entry.headline }}
            {% endif %}
        </li>
    {% endfor %}
    </ul>
</section>

{% for file in snippets(path) %}
    {% include file %}
{% endfor %}
